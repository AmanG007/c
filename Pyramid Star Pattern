#include <stdio.h>

int main()
{
   int i,j,n;
    printf("Enter any number:");
    scanf( "%d", &n);
    
    for(i=0; i<n; i++) {
        for(j=n-i; j>1; j--){
            printf(" ");
        }
        for(j=0; j<=i; j++){
            printf("*");
        }
       
       for(j=0; j<=i-1; j++){
           printf("*");
       }
        printf("\n");
    }
    return 0;
}
